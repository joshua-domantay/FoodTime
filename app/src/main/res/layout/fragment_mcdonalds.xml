<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".PandaExpressFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- McDonalds Icon -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:background="@drawable/mcdonalds_menu_logo"/>

            <!-- Featured Favorites -->
            <ImageButton
                android:id="@+id/mcDonalds_featured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="0dp"
                android:paddingBottom="10dp"
                app:srcCompat="@drawable/mcdonalds_featured_favorites"
                android:background="@null"/>

            <!-- Dollar Menu -->
            <ImageButton
                android:id="@+id/mcDonalds_dollarMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/mcdonalds_dollar_menu"
                android:background="@null"/>

            <!-- Burgers -->
            <ImageButton
                android:id="@+id/mcDonalds_burgers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/mcdonalds_burgers"
                android:background="@null"/>

            <!-- Breakfast -->
            <ImageButton
                android:id="@+id/mcDonalds_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="0dp"
                android:paddingBottom="3dp"
                app:srcCompat="@drawable/mcdonalds_breakfast"
                android:background="@null"/>

            <!-- McCafe Bakery -->
            <ImageButton
                android:id="@+id/mcDonalds_bakery"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />
                <!--
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:srcCompat="@drawable/mcdonalds_mccafe_bakery"
                android:background="@null"/>
                -->

            <!-- McCafe Coffees -->
            <ImageButton
                android:id="@+id/mcDonalds_coffees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/mcdonalds_mccafe_coffees"
                android:background="@null"/>

            <!-- McNuggets and Meals -->
            <ImageButton
                android:id="@+id/mcDonalds_mcNuggets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="13dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/mcdonalds_mcnuggets_and_meals"
                android:background="@null"/>

            <!-- Chicken and Fish Sandwiches -->
            <ImageButton
                android:id="@+id/mcDonalds_chickenFish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/mcdonalds_chicken_and_fish_sandwiches"
                android:background="@null"/>

            <!-- Fries and Sides -->
            <ImageButton
                android:id="@+id/mcDonalds_friesAndSides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/mcdonalds_fries_and_sides"
                android:background="@null"/>

            <!-- Happy Meal -->
            <ImageButton
                android:id="@+id/mcDonalds_happyMeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/mcdonalds_happy_meal"
                android:background="@null"/>

            <!-- Sweets and Treats -->
            <ImageButton
                android:id="@+id/mcDonalds_sweetsTreats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:srcCompat="@drawable/mcdonalds_sweets_and_treats"
                android:background="@null"/>

            <!-- Beverages -->
            <ImageButton
                android:id="@+id/mcDonalds_beverages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                app:srcCompat="@drawable/mcdonalds_beverages"
                android:background="@null"/>

            <!-- Cancel (left0) or submit (right) buttons  -->
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Back"
                    android:textSize="9pt" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>