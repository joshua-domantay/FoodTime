<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Add preferences screen placeholder" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal" >

            <ToggleButton
                android:id="@+id/option1Pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp"
                android:textOff="Option 1"
                android:textOn="Option 1" />

            <ToggleButton
                android:id="@+id/option2Pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp"
                android:textOff="Option 2"
                android:textOn="Option 2" />

            <ToggleButton
                android:id="@+id/option3Pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp"
                android:textOff="Option 3"
                android:textOn="Option 3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal" >

            <ToggleButton
                android:id="@+id/option4Pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp"
                android:textOff="Option 4"
                android:textOn="Option 4" />

            <ToggleButton
                android:id="@+id/option5Pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp"
                android:textOff="Option 5"
                android:textOn="Option 5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal" >

            <ToggleButton
                android:id="@+id/option6Pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp"
                android:textOff="Option 6"
                android:textOn="Option 6" />

            <ToggleButton
                android:id="@+id/option7Pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp"
                android:textOff="Option 7"
                android:textOn="Option 7" />

            <ToggleButton
                android:id="@+id/option8Pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp"
                android:textOff="Option 8"
                android:textOn="Option 8" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/welcomeNext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:textSize="25sp"
        android:text="@string/skip" />

</RelativeLayout>