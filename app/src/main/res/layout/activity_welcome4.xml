                android:textOn="Option 6" />

            <ToggleButton
                android:id="@+id/option7Allergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp"
